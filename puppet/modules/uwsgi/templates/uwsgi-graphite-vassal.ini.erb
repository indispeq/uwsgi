[uwsgi]
; this configuration assumes that the vassal name is the same as the project/virtualenv name

vassal_name = %n

uid = www-data
gid = www-data

socket = /tmp/%n.sock

home = <%= @app_venv %>
chdir = <%= @app_path %>
master = true
processes = 4
wsgi-file = /usr/share/graphite-web/graphite.wsgi
pidfile = /tmp/%n.pid
harakiri = 20
max-requests = 5000
vacuum = true
daemonize = <%= @uwsgi_dir %>/log/%n.log
pymodule-alias = graphite.local_settings=/etc/graphite/local_settings.py
buffer-size = 65536

